<?xml version="1.0"?>
<robot name="bluerov2_heavy_reach" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:arg name="prefix" default="" />
  <xacro:arg name="use_sim" default="false" />

  <!-- Import BlueROV2 macro -->
  <xacro:include
    filename="$(find blue_description)/xacro/bluerov2_heavy_reach/urdf.xacro" />

  <xacro:bluerov2_heavy_reach_urdf prefix="$(arg prefix)" />

  <!-- Import the Gazebo macro -->
  <xacro:if value="$(arg use_sim)">
    <xacro:include
      filename="$(find blue_description)/xacro/bluerov2_heavy_reach/gazebo.xacro" />
    <xacro:bluerov2_heavy_reach_gazebo prefix="$(arg prefix)" />
  </xacro:if>

</robot>
