{
  "name": "Documentation",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "settings": {
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "editor.rulers": [80]
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "unifiedjs.vscode-mdx"
      ]
    }
  }
}
